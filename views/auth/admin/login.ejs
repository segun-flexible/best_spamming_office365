<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="noindex, nofollow">
    <title><%=title%></title>

    
    <link rel="stylesheet" href="/admin/css/bootstrap.css">
    <link href="/admin/css/style.css" rel="stylesheet">
    <link href="/admin/css/custom.css" rel="stylesheet">
    <link href="/admin/css/circular.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
    
</head>

<body>



    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center"><span class="splash-description">Please enter
                    your admin information.</span></div>
            <div class="card-body">
                <form id="login">
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="credentials" type="text" placeholder="Username Or Email"
                            required="">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="password" type="password"
                            placeholder="Password" required>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                </form>
            </div>
            <div class="card-footer bg-white p-0  ">
                
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="/admin/forgot-password" class="d-none footer-link">Forgot Password</a>
                </div>
            </div>
        </div>
    </div>


    <script src="/admin/js/auth/login.js"></script>

    <script src="/admin/partials/adminFetcher.js"></script>
    <script src="/admin/partials/sweetalert.js"></script>


</body>

</html>